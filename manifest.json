{
  "name": "Thai Reactions",
  "short_name": "Thai Reactions",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Replaces emojis in Facebook Reactions by popular thai emoticons.",
  "homepage_url": "https://guitared.me",
  "default_locale": "th",
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "*://*.facebook.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*"
      ],
      "css": [
        "content_script/replace-reactions.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "img/*.png"
  ]
}
